<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RadioButton
        android:id="@+id/rb_respuesta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_respuesta1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Live upstairs" />

    <RadioButton
        android:id="@+id/rb_respuesta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rb_respuesta2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:text="Live below" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rb_respuesta1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="Where Mom and Dad live?" />

    <Button
        android:id="@+id/button_Respond3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_respuesta2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="responder"
        android:text="Respond" />

</RelativeLayout>